<center> 
  <h1><b> Report Detail's Page </b></h1>
  <div class= "square" align= "left"> 
    <p id="notice"><%= notice %></p>
    <table style="width:100%">
      <tr >
        <th padding="10px">Child name:</th>
        <td><%= @report.child_name %></td>
      </tr>
      <tr>
        <th>Child code:</th>
        <td><%= @report.child_code %></td>
      </tr>
      <tr>
        <th>Donor:</th>
        <td><%= @report.donor_id %></td>
      </tr>
      <tr>
        <th>Donation month:</th>
        <td><%= @report.donation_month %></td>
      </tr>
      <tr>
        <th>Date:</th>
        <td><%= @report.date %></td>
      </tr>
      <tr>
        <th>Paid:</th>
        <td><%= @report.paid %></td>
      </tr>
      <tr>
        <th>Sent by:</th>
        <td><%= @report.sent_by %></td>
      </tr>
    </table>
  </div>
  <p id="pdf_link"><%= link_to "Download Invoice (PDF)",  report_path(@report, :format => "pdf") %></p>
</center>