<%= form_for @event do |form| %>
  
  <div class= "col-md-6", align= "left", style= "margin: -4px 250px 0px;">
    <div class="field">
      <label>Name:</label><br>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <label>Type:</label><br>
      <%= form.text_field :event_type %>
    </div>

    <div class="field">
      <label>Description:</label><br>
      <%= form.text_field :description %>
    </div>

    <div class="field">
      <label>Address:</label><br>
      <%= form.text_field :address %>
    </div>

    <div class="field">
      <label>Organizer:</label><br>
      <%= form.text_field :organizer %>
    </div>

    <div class="field">
      <label>Image:</label><br>
      <%= form.file_field :image %>
    </div><br>

    <div class="actions">
      <%= form.submit "save", class: "btn btn-success" %>
    </div>
  </div>
<% end %>