<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>No of children</th>
      <th>No of staff</th>
      <th>State</th>
      <th>Established</th>
      <th>City</th>
      <th>Area</th>
      <th>Zip code</th>
      <th>Director</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.no_of_children %></td>
        <td><%= profile.no_of_staff %></td>
        <td><%= profile.state %></td>
        <td><%= profile.established %></td>
        <td><%= profile.city %></td>
        <td><%= profile.area %></td>
        <td><%= profile.zip_code %></td>
        <td><%= profile.director %></td>
        <td><%= profile.image %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
