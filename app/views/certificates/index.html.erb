<p id="notice"><%= notice %></p>

<h1>Certificates</h1>

<table class= "table product-overview">
  <thead>
    <tr>
      <th>index</th>
      <th>Donor</th>
      <th>month</th>
      <th>certificate</th>
      <th>Month</th>
      <th>Issue date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.id %></td>
        <td><%= certificate.donar_name %></td>>
        <td><%= certificate.month %></td>
        <td><%= certificate.issue_date %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

