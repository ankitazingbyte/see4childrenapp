<p id="notice"><%= notice %></p>

<h1>Certificates</h1>

<table class= "table product-overview">
  <thead>
    <tr>
      <th>index</th>
      <th>Donor</th>
      <th>month</th>
      <th>certificate</th>
      <th>Month</th>
      <th>Issue date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.id %></td>
        <td><%= certificate.donar_name %></td>
        <td><%= certificate.month %></td>
        <td><%= certificate.issue_date %></td>
    <% end %>
  </tbody>
</table>

<br>

<center><%= link_to 'Add Certificate', new_certificate_path, class: "btn btn-primary" %></center>
