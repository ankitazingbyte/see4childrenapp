<p id="notice"><%= notice %></p>

<h1>Beneficiary List</h1>

<table class="table product-overview">
  <thead>
    <tr>
      <th>Name</th>
      <th>Children</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% User.with_role(:ngo).each do |ngo| %>
      <tr>
        <td><%= ngo.email %></td>
        <td><%#= ngo.no_of_children %></td>
        <td><%#= ngo.address %></td>
        <td><%#= link_to 'Vew Details', admin_ngo, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add', new_admin_ngo_path, class: "btn btn-primary" %>
